{
	"extends": "../tslint.json",
	"rulesDirectory": [
		"codelyzer"
	],
	"rules": {
		"component-class-suffix": [
			true,
			"Component",
			"Layout",
			"Page",
			"Dialog"
		],
		"directive-class-suffix": true,
		"directive-selector": [
			true,
			"attribute",
			"mcy",
			"camelCase"
		],
		"component-selector": [
			true,
			"element",
			"mcy",
			"kebab-case"
		]
	}
}
