{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"outDir": "./dist/out-tsc",
		"declaration": false,
		"types": [
			"jasmine",
			"node"
		],
		"emitDecoratorMetadata": true,
		"baseUrl": "./projects",
		"paths": {
			"@mcy/main/*": ["libs/main/*"],
			"@mcy/core/*": ["libs/core/*"]
		}
	},
	"compileOnSave": false,
	"angularCompilerOptions": {
		"fullTemplateTypeCheck": true,
		"strictInjectionParameters": true
	},
	"include": [
		"projects/**/*"
	],
	"files": [
		"projects/client/test.ts",
		"projects/backoffice/src/test.ts",
		"projects/polyfills.ts",
		"projects/libs/main/polyfills/utils.d.ts"
	],
	"exclude": [
		"./karma.conf.js"
	]
}

